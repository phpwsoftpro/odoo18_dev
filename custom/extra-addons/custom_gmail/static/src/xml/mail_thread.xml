<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <!-- inherit đúng template name của mail thread -->
  <template id="mail_thread_date_override" inherit_id="mail.thread_view">
    <xpath expr="//t[@t-if='message.show_date']" position="replace">
      <t t-set="display_date">
        <t t-if="message.child_ids">
          <t t-esc="formatDatetime(message.child_ids[-1].date, lang)"/>
        <t t-else="">
          <t t-esc="formatDatetime(message.date, lang)"/>
        </t>
      </t>
      <span t-esc="display_date"/>
    </xpath>
  </template>
</templates>