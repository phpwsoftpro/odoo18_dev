<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_job_tree_extend" model="ir.ui.view">
        <field name="name">hr.job.tree.crm_task</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_tree"/>
        <field name="arch" type="xml">
            <!-- tô đỏ khi quá hạn -->
            <xpath expr="//list" position="attributes">
                <attribute name="decoration-danger">is_overdue</attribute>
            </xpath>
            <xpath expr="//list" position="attributes">
                <attribute name="decoration-danger">is_overdue</attribute>
                <attribute name="editable">top</attribute>
            </xpath>
            <!-- thêm cột -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="assignee_ids" widget="many2many_avatar_user"/>
                <field name="deadline" widget="date"/>
                <field name="application_count" string="CVs"/>
                <field name="crm_task_id"
                    string="CRM Task"
                    widget="many2one"
                    context="{'form_view_ref': 'project.view_task_form2'}"
                    options="{'no_create': True, 'no_open': False}"/>
            </xpath>
        </field>
    </record>
    <record id="view_hr_job_form_crm_tab" model="ir.ui.view">
        <field name="name">hr.job.form.crm.tab</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="CRM Tasks">
                    <field name="all_crm_tasks" widget="many2many" context="{'form_view_mode': 'edit'}" options="{'no_create': True}">
                        <list>
                            <field name="name"/>
                            <field name="user_ids" widget="many2many_avatar_user"/>
                            <button name="action_open_in_new_tab" type="object" string="open" icon="fa-external-link" class="btn btn-link" title="Open in full page"/>

                        </list>
                    </field>
                    <field name="crm_task_ids" widget="many2many" context="{'form_view_mode': 'edit'}" options="{'no_create': True}">
                        <list>
                            <field name="name"/>
                            <field name="user_ids" widget="many2many_avatar_user"/>
                            <button name="action_open_in_new_tab" type="object" string="open" icon="fa-external-link" class="btn btn-link" title="Open in full page"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    <record id="view_task_form_add_maximize_button" model="ir.ui.view">
        <field name="name">project.task.form.maximize.button</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <!-- chèn vào header của form -->
            <xpath expr="//form/header" position="inside">
                <button name="action_open_in_new_tab"
                    type="object"
                    string=""
                    icon="fa-external-link"
                    class="btn btn-link"
                    title="Open in full page"/>
            </xpath>
        </field>
    </record>
</odoo>