<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Inherit the email marketing form view -->
        <record id="view_email_template_form_reply_to_optional" model="ir.ui.view">
            <field name="name">mailing.mailing.form.reply_to_optional</field>
            <field name="model">mailing.mailing</field>
            <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_form"/>
            <field name="arch" type="xml">

                <!-- Remove 'required' from reply_to -->
                <field name="reply_to" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>

            </field>
        </record>

    </data>
</odoo>
