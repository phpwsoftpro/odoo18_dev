<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <!-- Mở rộng template mail.MessagingMenu -->
    <t t-inherit="mail.MessagingMenu" t-inherit-mode="extension">
        <!-- Tìm phần tử cha của các nút tab -->
        <xpath expr="//div[button[@data-tab='all']]" position="inside">
            <button class="btn btn-link px-2 py-1 m-1 lh-1 text-muted" type="button" data-tab="project" t-on-click="onProjectTabClick">
                Project
            </button>
        </xpath>
    </t>
</templates>